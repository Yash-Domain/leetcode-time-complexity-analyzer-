{
  "manifest_version": 3,
  "name": "LeetCode Complexity Analyzer",
  "version": "1.0",
  "description": "Analyze time and space complexity of LeetCode solutions",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://leetcode.com/*",
    "http://localhost:3000/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
