{
  "manifest_version": 3,
  "name": "LeetCode Complexity Analyzer",
  "version": "1.0",
  "description": "Analyze time and space complexity of LeetCode solutions",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode-time-complexity-analyzer.onrender.com/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
